{
  "private": true,
  "name": "crn-flix",
  "version": "1.0.1",
  "author": "Antoine Caron <antoine@crn-tech.fr>",
  "license": "ISC",
  "description": "CRN-Flix is an application server managing a user list for Jellyfin media server and centralizing media requests from Trakt.",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Plokkke/CRN-flix.git"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "start": "nest start --env-file .env",
    "start:local": "npm run start -- --entryFile local",
    "start:dev": "npm run start -- --watch",
    "start:debug": "npm run start:dev -- --debug",
    "start:prod": "node dist/main",
    "test": "npm run test:unit",
    "test:cov": "npm run test:unit:cov && npm run test:mut",
    "test:unit": "jest --passWithNoTests --config ./test/jest-unit.js",
    "test:unit:cov": "npm run test:unit -- --coverage",
    "test:mut": "stryker run",
    "validate": "npm run lint && npm run build && npm run test"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.0",
    "@nestjs/platform-express": "^11.1.0",
    "@plokkke/nest-health-registry": "^1.0.3",
    "axios": "^1.9.0",
    "discord.js": "^14.19.3",
    "lodash": "^4.17.21",
    "luxon": "^3.6.1",
    "nest-winston": "^1.10.2",
    "nestjs-zod": "^4.3.1",
    "nodemailer": "^6.10.1",
    "pg": "^8.15.6",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.17.0",
    "yaml": "^2.7.1",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.2",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@stryker-mutator/core": "^8.7.1",
    "@stryker-mutator/jest-runner": "^8.7.1",
    "@stryker-mutator/typescript-checker": "^8.7.1",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.15.12",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.12.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "dotenv-expand": "^12.0.2",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  }
}
